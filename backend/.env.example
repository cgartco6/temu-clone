# Server Configuration
NODE_ENV=development
PORT=5000
HOST=0.0.0.0
BASE_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:4000
API_VERSION=v1

# Database
MONGODB_URI=mongodb://localhost:27017/temu_clone
MONGODB_TEST_URI=mongodb://localhost:27017/temu_clone_test
MONGODB_PROD_URI=mongodb+srv://username:password@cluster.mongodb.net/temu_clone

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Password Reset
RESET_TOKEN_EXPIRY=3600000

# Payment Gateways
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_SECRET=your_paypal_secret
PAYPAL_MODE=sandbox

# Shipping
SHIPPO_API_KEY=your_shippo_api_key
EASYPOST_API_KEY=your_easypost_api_key
UPS_ACCESS_KEY=your_ups_access_key
UPS_USER_ID=your_ups_user_id
UPS_PASSWORD=your_ups_password
FEDEX_KEY=your_fedex_key
FEDEX_PASSWORD=your_fedex_password

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
EMAIL_FROM=noreply@temu-clone.com
EMAIL_FROM_NAME=Temu Clone

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=temu-clone-uploads
CLOUDFRONT_URL=https://d123456.cloudfront.net

# CDN & Storage
CDN_URL=https://cdn.temu-clone.com
UPLOAD_LIMIT=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# AI Services
OPENAI_API_KEY=sk-your-openai-api-key
RECOMMENDATION_API_URL=http://localhost:8000
FRAUD_DETECTION_API_URL=http://localhost:8001
CHATBOT_API_URL=http://localhost:8002

# Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
MIXPANEL_TOKEN=your_mixpanel_token
AMPLITUDE_API_KEY=your_amplitude_api_key

# Monitoring
SENTRY_DSN=your_sentry_dsn
NEW_RELIC_LICENSE_KEY=your_new_relic_key
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_WINDOW_MS=900000
RATE_LIMIT_AUTH_MAX_REQUESTS=5

# Cache
CACHE_TTL=3600
CACHE_ENABLED=true

# Security
CORS_ORIGIN=http://localhost:3000
HELMET_ENABLED=true
XSS_ENABLED=true
NO_SNIFF_ENABLED=true

# Session
SESSION_SECRET=your_session_secret
SESSION_MAX_AGE=86400000

# Feature Flags
FEATURE_AI_RECOMMENDATIONS=true
FEATURE_FRAUD_DETECTION=true
FEATURE_CHATBOT=true
FEATURE_SOCIAL_LOGIN=true
FEATURE_TWO_FACTOR_AUTH=true
